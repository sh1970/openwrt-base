FROM debian:buster

ARG USERUID
ARG USERGID

ENV USERID=$USERUID \
    GROUPID=$USERGID

RUN apt-get update && \
    apt-get install -y time git-core subversion build-essential ccache ecj fastjar file screen quilt libncursesw5-dev libssl-dev \
    g++ java-propose-classpath libelf-dev bash make libssl-dev patch libncurses5 libncurses5-dev zlib1g-dev gawk \
    flex gettext wget unzip xz-utils python python-distutils-extra python3 python3-distutils-extra rsync \
    python3-setuptools python3-dev swig time xsltproc zlib1g-dev llvm clang && \
    apt-get clean && \
    groupadd --gid $GROUPID buser && \
    useradd --uid $USERID --gid $GROUPID -m -s /bin/bash buser

USER buser
WORKDIR /home/buser

# set dummy git config and quilt settings
RUN git config --global user.name "buser" && git config --global user.email "buser@mt7621.com"
COPY quiltrc /home/buser/.quiltrc

# Switch to openwrt folder
WORKDIR /home/buser/openwrt

ENTRYPOINT [ "./build.sh" ]
